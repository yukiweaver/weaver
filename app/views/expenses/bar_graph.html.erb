<% provide(:title, '貯金グラフ')%>
<h1>貯金グラフ</h1>
<div class="row">
  <div style="width: 50%">
    <canvas id="chart" height="450" width="600"></canvas>
  </div>

  <table class="table table-bordered table-striped table-condensed">
    <tbody>
      <% @all_total_saving.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value[0] %><br>前月比：<%= '+' if value[1] > 0 %><%= value[1] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>