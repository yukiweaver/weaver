<% provide(:title, 'ログインフォーム') %>
<div class="row justify-content-center">
		<div class="col-md-4 col-md-offset-4">
			<div class="box">
				<%# <div class="input-group">
					<span class="input-group-addon addon-facebook">
						<i class="fa fa-fw fa-2x fa-facebook fa-fw"></i>
					</span>
					<a class="btn btn-lg btn-block btn-facebook" href="#"> Register with Facebook</a>
				</div>

				<div class="input-group">
					<span class="input-group-addon addon-twitter">
						<i class="fa fa-fw fa-2x fa-twitter fa-fw"></i>
					</span>
					<a class="btn btn-lg btn-block btn-twitter" href="#"> Register with Twitter</a>
				</div> %>
        <div class="input-group">
          <%= link_to '/auth/twitter', class: "btn btn-social btn-twitter-login" do %>
          <span class="fa fa-twitter input-group-addon addon-twitter"></span> Twitterアカウントでログイン
          <% end %>
        </div>

				<%= form_with(url: '/login', method: :post, local: true) do |f| %>

					<div class="divider-form"></div>

					<div class="form-group">
						<%# <label for="exampleInputEmail1">Email address</label> %>
						<%# <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email"> %>
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, class: 'form-control', id: "exampleInputEmail1" %>
					</div>

					<div class="divider-form"></div>

					<div class="form-group">
						<%# <label for="exampleInputPassword1">Password</label> %>
						<%# <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"> %>
            <%= f.label :パスワード %>
            <%= f.password_field :password, class: 'form-control', id: "exampleInputPassword1" %>
					</div>

					<div class="divider-form"></div>

					<p class="text-center login-color">Log in and manage your money thoroughly.</p>

					<%# <button type="submit" class="btn-block btn btn-lg btn-primary">Register Account</button> %>
          <%= f.submit 'ログイン', class: 'btn-block btn btn-lg btn-primary' %>

					<%# <p class="text-center">Already have an account? <a href="#">Sign in here</a></p> %>
          <p class="text-center login-color">新規登録は<%= link_to 'こちら', '/signup' %><p>
				<% end %>
			</div>
		</div>
	</div>