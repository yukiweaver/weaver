    <% else %>
    <%= link_to '家計簿Zeny', root_path, class: 'navbar-brand' %>
    <% end %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if current_user %>
        <li class="nav-item">
          <%= link_to '入力', household_path(user_id: user_id, status: 'expense'), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '収入および支出', expenses_path, data: {"turbolinks" => false}, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'グラフデータ', graph_path, data: {"turbolinks" => false}, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to 'トップ', root_path, class: 'nav-link' %>
        </li>
        <li class="nav=item">
          <%= link_to '新規登録', signup_path, class: 'nav-link' %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
